# Delta-Hedging Agent Configuration
# Copy this file to .env and fill in your values

# ============================================
# Database Configuration
# ============================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=trading_bot
DB_USER=postgres
DB_PASSWORD=your_password_here

# ============================================
# Market Data Configuration
# ============================================
# Options: polygon, iex, yahoo, mock
MARKET_PROVIDER=yahoo

# Polygon.io API Key (if using polygon)
MARKET_POLYGON_API_KEY=

# IEX Cloud API Key (if using iex)
MARKET_IEX_API_KEY=

# Update interval in seconds
MARKET_UPDATE_INTERVAL_SECONDS=60

# ============================================
# Risk Configuration
# ============================================
RISK_VAR_CONFIDENCE=0.95
RISK_ES_CONFIDENCE=0.975
RISK_VAR_LOOKBACK_DAYS=252
RISK_MONTE_CARLO_SIMULATIONS=10000

# Guardrails
RISK_MAX_DELTA_EXPOSURE=100.0
RISK_MAX_GAMMA_EXPOSURE=50.0
RISK_MAX_VEGA_EXPOSURE=1000.0
RISK_MAX_VAR_PERCENT=0.02
RISK_MAX_DRAWDOWN_PERCENT=0.05

# Stress scenarios
RISK_SPOT_SHOCK_STD=1.0
RISK_IV_SHOCK_POINTS=5.0

# ============================================
# Agent Configuration
# ============================================
# Options: paper, live, backtest
AGENT_MODE=paper

# Hedging frequency in minutes
AGENT_HEDGE_FREQUENCY_MINUTES=5

# Delta band threshold (rehedge if |delta| > threshold)
AGENT_DELTA_BAND_THRESHOLD=10.0

# Transaction cost in basis points
AGENT_TRANSACTION_COST_BPS=5.0

# Enable reinforcement learning overlay
AGENT_ENABLE_RL_OVERLAY=false

# ============================================
# Dashboard Configuration
# ============================================
DASH_HOST=127.0.0.1
DASH_PORT=8050
DASH_DEBUG=true
DASH_REFRESH_INTERVAL_MS=5000

# ============================================
# Logging
# ============================================
LOG_LEVEL=INFO
